{
    "type": "symfony-open-api-boilerplate",
    "license": "MIT",
    "authors": [
        {
            "name": "Sami Akkawi",
            "email": "sami@akkawi.ch",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4.2",
        "ext-ctype": "*",
        "ext-dom": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-yaml": "*",
        "ext-simplexml": "*",
        "symfony/asset": "5.*",
        "symfony/console": "5.*",
        "symfony/dotenv": "5.*",
        "symfony/flex": "1.*",
        "symfony/framework-bundle": "5.*",
        "symfony/twig-bundle": "5.*",
        "symfony/uid": "5.*",
        "symfony/yaml": "5.*",
        "twig/extra-bundle": "3.*",
        "twig/twig": "3.*"
    },
    "require-dev": {
        "symfony/stopwatch": "5.*",
        "symfony/web-profiler-bundle": "5.*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "cache:pool:clear cache.global_clearer -q": "symfony-cmd"
        },
        "post-install-cmd": [
            "composer dump-autoload",
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "composer dump-autoload",
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.*"
        }
    }
}
